<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AthleteApiArt" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/strava_orange</item>
        <item name="colorPrimaryVariant">@color/strava_orange</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/strava_orange</item>
        <item name="colorSecondaryVariant">@color/strava_orange</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/rust</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/light_background</item>

        <item name="android:fontFamily">@font/maison_neue</item>
    </style>

    <style name="Theme.AthleteApiArt.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AthleteApiArt.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AthleteApiArt.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>