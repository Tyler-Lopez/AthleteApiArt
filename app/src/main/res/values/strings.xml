    depending on how many activities were loaded to either continue with the partial load or to retry -->
    <string name="loading_activities_no_internet_prompt_zero_count">Check your connection and try again</string>
    <plurals name="loading_activities_no_internet_prompt">
        <item quantity="zero">@string/loading_activities_no_internet_prompt_zero_count</item>
